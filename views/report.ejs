<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Us</title>
    <!-- In <head> -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Before </body> -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   <style>
  #reportForm {
      background-color: #ffffff;
      padding: 30px 40px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 500px;
      display: flex;
      flex-direction: column;
      margin-left: 25%;
      margin-top: 10%;
    }

    #reportForm h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    #reportForm input[type="file"],
    #reportForm textarea {
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 10px;
      font-size: 1rem;
      width: 100%;
    }

    #reportForm textarea {
      resize: vertical;
      min-height: 100px;
    }

    #reportForm button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1rem;
      transition: background-color 0.3s ease;
    }

    #reportForm button:hover {
      background-color: #0056b3;
    }

    #reportForm input[type="hidden"] {
      display: none;
    }
   </style>
</head>
<body style="background-color: rgb(190, 190, 243);">
   <%- include("navbar")%>
    <h2 style="  margin-left:20%;"><b><i>Please help us by reporting Situation: </i></b></h2>
    <form id="reportForm" action="/report" method="POST" enctype="multipart/form-data">
  <input type="file" name="image" required /> <br><br>
  <textarea name="description" placeholder="Describe the situation..." required></textarea>
  <input type="hidden" id="latitude" name="latitude" />
  <input type="hidden" id="longitude" name="longitude" /> <br> <br>
  <button type="submit">Report</button>
</form>

<script>
    let form = document.getElementById("reportForm");
    form.addEventListener("submit", function(e){
        e.preventDefault(); // it will stop the form to be submitted so that lon and lat can be accessed 
    
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(
      (position) => {
        document.getElementById("latitude").value = position.coords.latitude;
        document.getElementById("longitude").value = position.coords.longitude;
        // now after accessing location submitting the form 
       e.target.submit();
      },
      (error) => {
        console.warn("Geolocation permission denied or failed.");
      }
    );
  } else {
    console.warn("Geolocation is not supported by this browser.");
  }
  });
</script>
</body>
</html>