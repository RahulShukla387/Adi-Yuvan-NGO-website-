<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body> 
        <%- include("navbar")%>
  <% if(list.length === 0){ %>
    <h1>No images being uploaded yet</h1>
  <% } else {  
    list.forEach(event => { %>
      <form action="/dlt/showAll/<%= event._id %>?_method=DELETE" method="post"> <br> <br>
        <input type="submit" name="" id="" value="dlt event">
        </form>
        <a href="/edit/showAll/<%= event._id %>"> edit event</a> 
      <h2><%= event.title %></h2>
      <p><%= event.description %></p>
          <div class="grid">
              <% event.images.forEach(image => { %>
                <div class="card">
                  <img class="img" src="<%= image.path %> " alt="Image">
                  <form action="/delete/showAll/<%= image._id %>?_method=DELETE" method="post">
                     <button type="submit"> delete Image</button>
                    </form>   
                </div>
              <% }) %>
            </div>
  <% }) } %>

</body>
</html>

 
   
 
 
    
  